<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- MSSV, Họ tên, Giới tính, Email, Số điện thoại -->
    <EditText
        android:id="@+id/etMSSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MSSV"/>

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ tên"/>

    <!-- Giới tính (RadioButton) -->
    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton android:id="@+id/rbMale" android:text="Nam" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        <RadioButton android:id="@+id/rbFemale" android:text="Nữ" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
    </RadioGroup>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"/>

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"/>

    <!-- Ngày sinh (CalendarView, ẩn/hiện bằng Button) -->
    <Button
        android:id="@+id/btnToggleCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ngày sinh"/>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:clickable="true"/>

    <!-- Tỉnh, Quận, Phường Spinner -->
    <Spinner android:id="@+id/spProvince" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spDistrict" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spWard" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <!-- Sở thích CheckBox -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sở thích"/>
    <CheckBox android:id="@+id/cbSports" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thể thao"/>
    <CheckBox android:id="@+id/cbMovies" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Điện ảnh"/>
    <CheckBox android:id="@+id/cbMusic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Âm nhạc"/>

    <!-- Đồng ý với điều khoản và nút Submit -->
    <CheckBox android:id="@+id/cbAgreeTerms" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đồng ý với điều khoản"/>
    <Button android:id="@+id/btnSubmit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Submit"/>

</LinearLayout>
